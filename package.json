{
  "name": "stylelint-problem-matcher",
  "version": "1.0.0",
  "private": true,
  "description": "Sets up a problem matcher for stylelint that's used to create annotations for violations",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "lint": "tsc --noEmit",
    "package": "ncc build src/main.ts",
    "release": "npm run package && git add -f dist/",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xt0rted/dotnet-format-linter-action.git"
  },
  "keywords": [
    "actions",
    "github",
    "problem-matcher",
    "annotations"
  ],
  "author": "xt0rted",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@vercel/ncc": "^0.34.0",
    "cross-env": "^7.0.3",
    "github-actions-problem-matcher-typings": "^1.1.0",
    "jest": "^28.1.2",
    "jest-circus": "^28.1.3",
    "ts-jest": "^28.0.5",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
